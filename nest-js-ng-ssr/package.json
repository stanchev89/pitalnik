{
  "name": "pitalnik-be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "ng": "ng",
    "start-fe": "cd angular-app && ng serve",
    "build-fe": "cd angular-app && ng build",
    "watch-fe": "cd angular-app && ng build --watch --configuration production",
    "test-fe": "cd angular-app && ng test",
    "serve:ssr": "nodemon dist/angular-app/server/server.mjs",
    "watch:ssr": "nodemon --watch angular-app/src/ -e ts,html,scss --exec 'npm run serve:ssr'",
    "serve-watch:ssr": "npm run watch-fe & npm run watch-be & npm run watch:ssr",
    "build-be": "nest build",
    "watch-be": "nest build --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start-be": "nest start",
    "start-be:dev": "nest start --watch",
    "start-be:debug": "nest start --debug --watch",
    "start-be:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint-staged": "lint-staged",
    "typeorm-cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm": "npx typeorm -d dist/src/api/data-source.js",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert"
  },
  "dependencies": {
    "@angular/animations": "^17.0.0",
